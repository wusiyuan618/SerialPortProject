<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@mipmap/bg"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <TextView
                android:id="@+id/tvTitle"
                android:text="屏保时间"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvContent"
            android:text="请设置锁屏时间"
            android:layout_marginTop="42dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel"
            app:wheel_selected_item_text_color="#FFFDFD"
            app:wheel_item_text_color="#666666"
            app:wheel_curtain="false"
            app:wheel_visible_item_count="7"
            app:wheel_curved="true"
            app:wheel_atmospheric="true"
            app:wheel_indicator="false"
            app:wheel_item_text_size="24sp"
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
</LinearLayout>