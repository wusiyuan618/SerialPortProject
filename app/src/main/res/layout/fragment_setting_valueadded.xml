<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@mipmap/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tvTitle"
            android:text="增值服务"
            android:layout_marginTop="240dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/rlPicFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ivPicFilter"
                    android:src="@mipmap/pic_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="MERV-13 Filter 过滤器"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:layout_below="@id/ivPicFilter"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rlPicLight"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/rlPicFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ivPicLight"
                    android:src="@mipmap/pic_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="MERV-13 Filter 过滤器"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/ivPicLight"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>